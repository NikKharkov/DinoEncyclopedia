<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.dinoencyclopedia.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/splash_to_onboarding"
            app:destination="@+id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/splash_to_home"
            app:destination="@+id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.dinoencyclopedia.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/onboarding_to_home"
            app:destination="@+id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dinoencyclopedia.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/home_to_webview"
            app:destination="@+id/webviewFragment" />
        <action
            android:id="@+id/home_to_dotd"
            app:destination="@+id/dinoDetails" />
    </fragment>

    <fragment
        android:id="@+id/encyclopediaFragment"
        android:name="com.example.dinoencyclopedia.ui.encyclopedia.EncyclopediaFragment"
        android:label="Encyclopedia" >
        <action
            android:id="@+id/encyclopedia_to_dinoDetails"
            app:destination="@+id/dinoDetails" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.dinoencyclopedia.ui.map.MapFragment"
        android:label="Map" />

    <fragment
        android:id="@+id/webviewFragment"
        android:name="com.example.dinoencyclopedia.ui.webview.WebViewFragment"
        android:label="WebView">
        <argument
            android:name="articleUrl"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/dinoDetails"
        android:name="com.example.dinoencyclopedia.ui.dino_details.DinoDetailsFragment"
        android:label="DinoDetails">
        <argument
            android:name="dinoId"
            app:argType="integer" />
    </fragment>
</navigation>